extends layout

block content
  section.main
    section
      h1.title-text Videos
      video#bgvid.content-container(autoplay='autoplay', muted='muted', loop)
        source(src='/videos/nuendo7.mp4', type='video/mp4')
        p.white-text Sorry, this video isn't compatible with your Browser. Please Download Chrome.
    section.clearfix
      h1.title-text Images
      img.spacing(src='/images/hero-banner.jpg', alt='hero banner')
      img.spacing(src='/images/rock.jpg', alt='you rock imahe')
      img.spacing(src='/images/w14a.jpg', alt='image of a crazy women')
  section.main
    h1.title-text UI color palette
    h2 We are using Sass CSS so every color that we use it's stored in a variable.
      | Every color box shows both the value of the color and the variable that belongs to it.
    p.sub-title-text.spacing Primary colors
    div.index-container
      section.primary-color-box
        h1 Primary color
        section
          h2 val = #ffffff
          p variable name =
          p $primary-color
      section.primary-color-box-two
        h1 Secondary color
        section
          h2 val = #3f3f3f
          p variable name =
          p $secondary-color
      section.primary-color-box-three
        h1 Tertiary color
        section
          h2v val = $dark-pink + 20
          p variable name =
          p $Tertiary-color
    section.code-sample-box
      h1.push-down Usage:
      p Primary color box has a class="primary-color-box".
      p Secondary color box has a class="primary-color-box-two".
      p Tertiary color box has a class="primary-color-box-three".
      p.spacing HTML
      pre.
        &lt;section class=&quot;primary-color-box&quot;&gt;
          //box one
        &lt;/section&gt;

        &lt;section class=&quot;primary-color-box-two&quot;&gt;
          //box two
        &lt;/section&gt;

        &lt;section class=&quot;primary-color-box-three&quot;&gt;
          //box three
        &lt;/section&gt;
      p.spacing CSS
      pre.
        .primary-color-box{
          background: $primary-color;
        }

        .primary-color-box-one{
          background: $secondary-color;
        }

        .primary-color-box-three{
          background: $Tertiary-color;
        }
  section.main.clearfix
    h1.title-text Secondary colors
    div.index-container
      section.secondary-color-box
        h1 Light grey
        section
          h2 val = #ECECEC
          p variable name =
          p $light-grey
      section.secondary-color-box-two
        h1 Dark blue
        section
          h2 val = #717478 - 50
          p variable name =
          p $dark-blue
      section.secondary-color-box-three
        h1 Dark pink
        section
          h2 val = #930006
          p variable name =
          p $dark-pink
    section
      h1.push-down Usage:
      p Primary color box has a class="secondary-color-box".
      p Secondary color box has a class="secondary-color-box-two".
      p Tertiary color box has a class="secondary-color-box-three".
      p.spacing HTML
      pre.
        &lt;section class=&quot;secondary-color-box&quot;&gt;
          //box one
        &lt;/section&gt;

        &lt;section class=&quot;secondary-color-box-two&quot;&gt;
          //box two
        &lt;/section&gt;

        &lt;section class=&quot;secondary-color-box-three&quot;&gt;
          //box three
        &lt;/section&gt;
      p.spacing CSS
      pre.
        .secondary-color-box{
          background: $light-grey;
        }

        .secondary-color-box-one{
          background: $dark-blue;
        }

        .secondary-color-box-three{
          background: $dark-pink;
        }
  section.main.clearfix
    h1.title-text Font Stack
    h2 font-family: 'Lato', sans-serif;
  section.main.clearfix
    h1.title-text Headings
    h1 This is a heading 1
    h2 This is a heading 2
    h3 This is a heading 3
    h4 This is a heading 4
    h5 This is a heading 5
    h6 This is a heading 6

  section.main.last-child.clearfix
    h1.title-text Svg icons
    ul.icon-list.clearfix
      li.icons
        img(src='/images/facebook.svg', alt='facebook svg')
      li.icons
        img(src='/images/googleplus.svg', alt='googleplus')
      li.icons
        img(src='/images/soundcloud.svg', alt='soundcloud')
      li.icons
        img(src='/images/youtube.svg', alt='youtube')

